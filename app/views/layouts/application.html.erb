<!DOCTYPE html>
<html>
  <head>
    <title>Rails Stock Control</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
     <%if current_user %>
     <%=button_to "Log out", logout_path, method: "delete" %>
      <div class="container">
        <div class="navbar-header">
        <a class="navbar-brand" href="<%= user_url(current_user) %>"/>Home</a>  
        <a class="navbar-brand" href="<%= transactions_url %>"/>Transactions</a>  
        <a class="navbar-brand" href="<%= items_url %>"/>Items</a>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
      <%end%>
    </div>
    <!-- content -->
    <div class="container row row-centered"  role="main">
      <%=flash[:error] if flash[:error]%>
      <%=flash[:alert] if flash[:alert]%>
      <%=flash[:message] if flash[:message]%>
      <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-centered">
              <%= yield %>
      </div>
    </div>
  </body>
</html>

